# Railway-specific environment configuration
DEBUG=false
ENVIRONMENT=railway
LOG_FORMAT=json

# Resource optimization for Railway
MAX_FILE_SIZE=20971520  # 20MB
OCR_TIMEOUT=120  # 2 minutes
MAX_CONCURRENT_TASKS=1
WORKER_COUNT=1
WORKER_TIMEOUT=60

# Rate limiting for Railway
RATE_LIMIT_REQUESTS_PER_MINUTE=30
RATE_LIMIT_REQUESTS_PER_HOUR=500

# Disable Redis for Railway (use in-memory queue)
USE_REDIS=false

# Monitoring
ENABLE_METRICS=true
CPU_ALERT_THRESHOLD=70.0
MEMORY_ALERT_THRESHOLD=75.0
DISK_ALERT_THRESHOLD=80.0

# Security
REQUIRE_API_KEY=false
ENABLE_SECURITY_HEADERS=true
ENABLE_REQUEST_LOGGING=true