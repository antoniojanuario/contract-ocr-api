# Render-specific environment configuration
DEBUG=false
ENVIRONMENT=render
LOG_FORMAT=json

# Resource optimization for Render free tier
MAX_FILE_SIZE=25165824  # 24MB
OCR_TIMEOUT=180  # 3 minutes
MAX_CONCURRENT_TASKS=1
WORKER_COUNT=1
WORKER_TIMEOUT=90

# Rate limiting for free tier
RATE_LIMIT_REQUESTS_PER_MINUTE=30
RATE_LIMIT_REQUESTS_PER_HOUR=500

# Monitoring
ENABLE_METRICS=true
CPU_ALERT_THRESHOLD=75.0
MEMORY_ALERT_THRESHOLD=80.0
DISK_ALERT_THRESHOLD=85.0

# Security
REQUIRE_API_KEY=false
ENABLE_SECURITY_HEADERS=true
ENABLE_REQUEST_LOGGING=true